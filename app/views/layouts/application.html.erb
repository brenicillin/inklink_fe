<!DOCTYPE html>
<html>
  <head>
    <title>InklinkFe</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= favicon_link_tag asset_path('favicon.ico') %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
  </head>

  <body class="bg-black text-light alert-warning">
    <div class="bg-black container text-center">
      <%= link_to root_path do %>
        <%= image_tag("/assets/images/ink_link_blk.png", size: '300x150') %>
      <% end %>
    </div>
    <div id="flash-msg">
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, class: name %>
      <% end %>
    </div>
    <div class="navbar-text navbar-expand-sm bg-danger text-end">
      <% if current_user %>
        <%= link_to "Logout", logout_path, method: :delete %>
        <%= link_to "Dashboard", user_path(current_user) %>
      <% else %>
        <%= link_to "Home", root_path %>
      <% end %>
    </div>
    <%= yield %>
  </body>
</html>
